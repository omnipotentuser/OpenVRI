@import 'nib'
@import 'nib/gradients'

html
body
    padding-left auto
    padding-right auto

#_openvri_content
    display block

#_openvri_dialog
    display none
    overflow hidden
    background linear-gradient(top, #F2F2FF, #DDDDFF, #F2F2FF)

#_openvri_video-layout
    height 685px
    width 100%
    //background-color #FAFAFA
    //background-color #CEEFFF
    background rgba(255,255,255,0.0);

#_openvri_video-header
    width 100%
    height 40px

._openvri_button
    border-style solid
    border-width 1px
    border-color #B0D2FF
    border-radius 2px
    background linear-gradient(top, #3EC1FF, #6FC2FF, #3EC1FF)
    text-weight normal
    opacity 1
    text-align center
    font-family Verdana, Arial, Lucida, Sans-serif
    color white
    &:hover
        background #3EC1FF
    &:active 
        background linear-gradient(top, #3EC1FD, #3EC1FF, #3EC1FD)

#_openvri_createBtn
    width 180px
    height 80px
    font-size 24px 

#_openvri_hangupBtn
    float left
    width 70px
    height 30px
    font-size 14px 
    font-weight bold
    margin 5px

#_openvri_inviteBtn
    float right
    width 70px
    height 30px
    font-size 14px 
    font-weight bold
    margin 5px

#_openvri_video-body
    width 100%
    height 370px

._openvri_video-box
    width 480px
    height 360px
    background-color #888
    margin 5px

#_openvri_message-body
    width 100%
    height 270px

#local-ta
    background-color #fdfdfd
    margin 15px
    &:focus
        outline-color #3EC1FF

#_openvri_message-src-two, #_openvri_message-src-three
    background-color #cfcfcf
    color black
    margin 15px

._openvri_messages
    width 452px
    height 250px
    resize none
    font-size 18px
    border-width 2px
    border-color #3EC1FF

#_openvri_inviteURL
    font-size 14px
    font-weight normal
    float left
    color black
    margin-top 10px
    margin-left 20px
    display none

#_openvri_inviteDialog
    position absolute
    display none
    z-index 3
    border-style solid
    border-width 5px
    border-color #3EC1FF
    border-radius 2px
    background #d0d0d0
    text-weight normal
    opacity .90
    text-align center
    font-family Verdana, Arial, Lucida, Sans-serif
    color black
    left 50%
    top 50px
    width 400px
    height auto
    margin-left -200px

#_openvri_inviteContext
    margin 20px

#_openvri_inviteTitle
    font-size 18px
    margin-bottom 20px
    
#_openvri_urlAddr
    font-size 16px
    font-weight bold
    height auto
    overflow auto

#_openvri_inviteBtns
    margin-left 20px
    margin-right 20px
    margin-top 60px
    margin-bottom 20px

#_openvri_clipboardBtn
    float right
    bottom 20px
    width 100px
    height 30px
    display none

#_openvri_closeInviteBtn
    float left
    margin-bottom 20px
    width 70px
    height 30px
