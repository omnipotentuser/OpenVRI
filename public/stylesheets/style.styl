@import 'nib'
@import 'nib/gradients'

html
body
    padding-left auto
    padding-right auto

#_openvri_content
    display none

#_openvri_video-layout
    height 685px
    width 1470px
    margin-left -10px
    margin-top 5px
    background-color #FAFAFA
    //background-color #CEEFFF

#_openvri_video-header
    width 100%
    height 40px

#_openvri_inviteURL
    font-size 14px
    font-weight normal
    float right
    color black
    margin-top 10px
    margin-right 365px

._openvri_button
    border-style solid
    border-width 1px
    border-color #B0D2FF
    border-radius 2px
    background linear-gradient(top, #3EC1FF, #6FC2FF, #3EC1FF)
    text-weight normal
    margin 5px
    opacity 1
    text-align center
    font-family Verdana, Arial, Lucida, Sans-serif
    color white
    &:hover
        background #3EC1FF
    &:active 
        background linear-gradient(top, #3EC1FD, #3EC1FF, #3EC1FD)

#_openvri_createBtn
    width 180px
    height 80px
    font-size 24px 

#_openvri_hangupBtn
    float left
    width 70px
    height 30px
    font-size 14px 
    font-weight bold

#_openvri_inviteBtn
    float right
    width 70px
    height 30px
    font-size 14px 
    font-weight bold

#_openvri_video-body
    width 1470px
    height 370px

._openvri_video-box
    width 480px
    height 360px
    background-color #888
    margin 5px

#_openvri_video-src-one
    margin-left 490px
    animation-duration 2s

#_openvri_message-body
    width 1470px
    height 270px

#_openvri_message-src-one
    background-color #fdfdfd
    animation-duration 2s
    margin 15px
    margin-left 500px
    &:focus
        outline-color #3EC1FF

#_openvri_message-src-two, #_openvri_message-src-three
    background-color #cfcfcf
    color black
    margin 15px

._openvri_messages
    width 452px
    height 250px
    resize none
    font-size 18px
    border-width 2px
    border-color #3EC1FF

